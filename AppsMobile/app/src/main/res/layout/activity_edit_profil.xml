<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".EditProfilActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="@color/gray"
        android:outlineAmbientShadowColor="@color/black"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Edit Profil"
                    android:textAllCaps="true"
                    android:textColor="@color/greendark"
                    android:textSize="@dimen/_22sdp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/profilback"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back"
                android:backgroundTint="@color/white"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/profilimagefull"
                    android:contentDescription="Profil"/>
   <com.google.android.material.button.MaterialButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ubah Foto"
       android:maxLines="1"
       android:backgroundTint="@color/white"
       android:textColor="@color/black"
       android:textSize="@dimen/_12ssp"
       android:drawableLeft="@drawable/ic_kamera"
       android:elevation="@dimen/_10sdp"
       app:strokeWidth="@dimen/_1sdp"
       app:strokeColor="@color/greendark"
       android:layout_gravity="center_horizontal"
       android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="@dimen/_15ssp"
                    />

                <EditText
                    android:id="@+id/namalengkapedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/bg_editext"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_18sdp"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp" />
 <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Telepon"
                    android:textSize="@dimen/_17ssp"
                    />

                <EditText
                    android:id="@+id/teleponedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/bg_editext"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="@dimen/_18sdp"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp" />
                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:textSize="@dimen/_17ssp"
                    />
                <Spinner
                    android:id="@+id/gender_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/bg_editext"
                    android:popupBackground="@color/gray"
                    />
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow
        android:gravity="center_horizontal">
        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
            <TextView
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tempat Lahir"
                                    android:textSize="@dimen/_17ssp"
                                    />
            <EditText
                                    android:id="@+id/tempatlahiredit"
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ems="10"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:textSize="@dimen/_15sdp"
                                    android:background="@drawable/bg_editext"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_18sdp"/>

        </LinearLayout>
        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Tanggal Lahir"
                android:textSize="@dimen/_17ssp" />
            <EditText
                android:id="@+id/tanggaledit"
                                    android:layout_width="@dimen/_120sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:ems="10"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_15sdp"
                                    android:background="@drawable/bg_editext"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:paddingBottom="@dimen/_10sdp"
                                    android:paddingLeft="@dimen/_18sdp"
                android:paddingRight="@dimen/_10sdp"
                android:drawableEnd="@drawable/ic_kalender"/>
           </LinearLayout>
    </TableRow>
</TableLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="17sp"
                    />

                <EditText
                    android:id="@+id/emailedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_editext"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="18dp"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15dp" />
                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/simpanedit"
                    android:layout_gravity="end"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:text="Simpan"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    android:shadowRadius="3"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/green"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
