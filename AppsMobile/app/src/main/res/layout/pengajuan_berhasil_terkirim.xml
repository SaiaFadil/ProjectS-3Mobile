<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/SelamatDatang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="@dimen/_50sdp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formulir Terkirim"
                android:textColor="@color/greendark"
                android:textSize="@dimen/_30ssp"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                />

            <ImageView
                android:layout_width="@dimen/_350sdp"
                android:layout_height="@dimen/_350sdp"
                android:src="@drawable/woman_happy"
                android:layout_gravity="center"
                android:padding="@dimen/_20sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Formulir yang anda ajukan sudah terkirim anda dapat mengecek hasilnya pada halaman status"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cekstatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:text="Cek Status"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="sans-serif"
                android:shadowRadius="3"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:backgroundTint="@color/greendark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>