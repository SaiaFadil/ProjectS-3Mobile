                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 Oktober 2023"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nganjuk Night Carnival"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Anjuk Ladang No.12, Ploso, Kec. Nganjuk, Kabupaten Nganjuk, Jawa Timur 64417"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        app:strokeColor="@color/greendark"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:outlineAmbientShadowColor="@color/greendark"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="left">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/contohfotoevent1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 Oktober 2023"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nganjuk Night Carnival"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Anjuk Ladang No.12, Ploso, Kec. Nganjuk, Kabupaten Nganjuk, Jawa Timur 64417"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginBottom="20dp"
        app:strokeColor="@color/greendark"
        app:strokeWidth="1dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:outlineAmbientShadowColor="@color/greendark"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="left">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@drawable/contohfotoevent1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 Oktober 2023"
                    android:textColor="@color/black"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nganjuk Night Carnival"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jl. Anjuk Ladang No.12, Ploso, Kec. Nganjuk, Kabupaten Nganjuk, Jawa Timur 64417"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <!--    Awal CardView Top-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="1dp"
        android:id="@+id/cardviewatas"
        android:layout_gravity="center_vertical"
        app:strokeColor="@color/gray"
        android:visibility="gone"
        android:outlineAmbientShadowColor="@color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wellcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Selamat Datang"
                android:textColor="@color/greendark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/namauserhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:text="Namamu"
                android:textColor="@color/greendark"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/keprofil"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:backgroundTint="@color/white"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="30dp"
            android:src="@drawable/profilimagefull"
            />
    </com.google.android.material.card.MaterialCardView>
