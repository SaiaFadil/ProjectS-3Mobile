<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MenuFragment.HomeFragment">

    <ScrollView
        android:id="@+id/scrollviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:id="@+id/cardviewtengah"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-15dp"
            android:layout_below="@+id/linear1"
            android:outlineAmbientShadowColor="@color/greendark"
            app:cardElevation="16dp"
            app:cardMaxElevation="20dp"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wellcometengah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Selamat Datang"
                    android:textColor="@color/greendark"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/namauserhometengah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Namamu"
                    android:textColor="@color/greendark"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/keprofiltengah"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/white"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/profilimagefull"
                />
        </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan yang dikelola oleh\nDinas PORABUDPAR:"
                android:textSize="16sp"
                android:textColor="@color/greendark"
                android:fontFamily="sans-serif"
                android:id="@+id/textpemberitahuanlayanan"
                android:layout_below="@+id/cardviewtengah"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="10"

                android:layout_marginLeft="20dp"/>
            <TableLayout
                android:layout_below="@+id/textpemberitahuanlayanan"
                android:padding="20dp"
                android:id="@+id/tabellayout"
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardevent"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:backgroundTint="@color/greenwhite"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/calendar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Upload Event"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardpinjam"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/greenwhite"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_marginLeft="10dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/office" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Pinjam Tempat"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardinduk"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:backgroundTint="@color/greenwhite"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/woman" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Nomor Induk\nSeniman"
                                    android:textColor="@color/black"
                                    android:textAlignment="center"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardizin"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginLeft="10dp"
                            android:backgroundTint="@color/greenwhite"
                            app:cardElevation="8dp"
                            app:cardMaxElevation="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/letter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Surat Izin Pentas"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Terkini"
                android:textSize="16sp"
                android:textColor="@color/greendark"
                android:fontFamily="sans-serif"
                android:id="@+id/tv_eventTerkini"
                android:layout_below="@+id/tabellayout"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:shadowColor="#50000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:layout_marginBottom="-10dp"
            />

            <!--            Komponen di bawah ini nanti akan di ganti Recview-->
<LinearLayout
