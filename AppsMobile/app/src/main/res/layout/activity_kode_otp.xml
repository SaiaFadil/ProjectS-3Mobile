<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Activity.KodeOtp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode OTP"
                android:textSize="@dimen/_35ssp"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan masukkan kode otp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/gambaranimasi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:src="@drawable/anim7"
                android:layout_marginTop="@dimen/_30sdp"
                />

            <!-- Kolom untuk kode OTP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    app:boxStrokeColor="@android:color/black"
                    app:boxStrokeWidthFocused="@dimen/_2sdp"
                    app:boxStrokeWidth="@dimen/_1sdp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textSize="@dimen/_33ssp"
                        android:letterSpacing="1"
                        android:textAlignment="inherit"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_konfirmasiotpp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:text="Lanjut"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_30sdp"
                android:shadowRadius="3"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:backgroundTint="@color/greendark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
