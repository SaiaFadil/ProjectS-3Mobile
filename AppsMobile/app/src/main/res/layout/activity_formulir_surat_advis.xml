<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.FormulirSuratAdvisActivity">
    <include
        android:id="@+id/cardViewContainer"
        layout="@layout/fragment_view_top_formulir_advis"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Induk Seniman"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/et_induksenimanadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Masukkan Nomor Induk Seniman"
                android:inputType="number"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/et_namalengkapadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Masukkan Nama Lengkap Sesuai KTP"
                android:inputType="text"
                android:maxLines="1"

                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />



            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/et_alamatadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Masukkan Alamatmu"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pentas"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/et_namapentasadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Masukkan Nama Pentasmu"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Pentas"
                android:textSize="17sp"
                />


            <EditText
                android:id="@+id/et_tanggalpentasadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Pilih Tanggal"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="17sp"
                />


            <EditText
                android:id="@+id/et_lokasiadvis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_editext"
                android:ems="10"
                android:hint="Masukkan Tempat"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setelah mengisi formulir dengan lengkap, anda menyetujui hal-hal berikut :"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1."
                            android:textSize="16sp"
                            android:fallbackLineSpacing="true"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:layout_marginTop="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tidak keberatan memberikan Surat Advis untuk mendapatkan ijin keramaian dari kepolisian."
                            android:textSize="16sp"
                            android:fallbackLineSpacing="true"
                            android:textColor="@color/black"
                            />

                </TableRow>

                <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."
                        android:textSize="16sp"
                        android:fallbackLineSpacing="true"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Surat Advis ini berlaku satu kali pentas."
                        android:textSize="16sp"
                        android:fallbackLineSpacing="true"
                        android:textColor="@color/black"
                        />


                </TableRow>
                <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left">
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3."
                        android:textSize="16sp"
                        android:fallbackLineSpacing="true"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pementasan kesenian tanpa Surat Advis merupakan pelanggaran Peraturan Daerah."
                        android:textSize="16sp"
                        android:fallbackLineSpacing="true"
                        android:textColor="@color/black"
                        />


                </TableRow>


            </TableLayout>


            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/btn_kirimformuliradvis"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Kirim"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                android:shadowRadius="3"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:backgroundTint="@color/greendark"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>