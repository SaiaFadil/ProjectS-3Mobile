<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELAMAT DATANG KE NGANJUK ELOK"
                android:textSize="@dimen/_21ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Silahkan masuk dan lakukan aktivitas"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"/>

            <ImageView
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_220sdp"
                android:src="@drawable/anim2"
                android:layout_marginBottom="-10dp"
                android:scaleType="fitXY"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Email"
                android:layout_margin="@dimen/_7sdp"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxStrokeColor="@color/greendark"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_emailSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Kata Sandi"
                android:layout_margin="@dimen/_7sdp"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxStrokeColor="@color/greendark"
                app:boxStrokeWidth="@dimen/_2sdp"
                app:boxCornerRadiusTopEnd="@dimen/_5sdp"
                app:boxCornerRadiusTopStart="@dimen/_5sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_5sdp"
                app:boxCornerRadiusBottomStart="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_passwordSignin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeActionId="6"
                    android:imeActionLabel="Sign In"
                    android:imeOptions="actionDone"
                    android:drawableRight="@drawable/ic_eye"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btn_lupapassword"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:text="Lupa kata sandi?"
                android:textStyle="italic"
                android:layout_gravity="right"
                android:textColor="@color/greendark"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="-15dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_siginSignin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:text="Masuk"
                android:textSize="@dimen/_17ssp"
                android:fontFamily="sans-serif"
                android:shadowRadius="3"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textAllCaps="false"
                android:shadowDy="7"
                android:shadowDx="5"
                android:shadowColor="@color/black"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:backgroundTint="@color/greendark"/>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:text="Belum punya akun?"
                        android:textSize="@dimen/_12ssp" />

                    <Button
                        android:id="@+id/button_signupSignin"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="@dimen/_70sdp"
                        android:layout_weight="1"
                        android:text="Daftar Disini"
                        android:textSize="@dimen/_11sdp"
                        android:maxLines="1"
                        android:textColor="@color/blue"
                        android:textAlignment="textStart"
                        android:textAllCaps="false" />
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--------------------------  atau  --------------------------"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textStyle="bold"
                android:maxLines="1"
                android:gravity="center_horizontal"/>
            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>