<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        tools:context=".Activity.ProfilActivity">
    <include
        android:id="@+id/cardViewContainer"
        layout="@layout/fragment_view_top_profil_lengkap"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/profilimagefull"
                    android:contentDescription="Profil"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_namalengkap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/tv_telponlengkap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Handphone"
                        android:textColor="@color/black"
                        android:layout_gravity="left"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="18sp"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/tv_Emaillengkap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="contoh@gmail.com"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:maxLines="1"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengaturan Profil"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:background="@color/gray"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:textSize="24sp"
                    android:maxLines="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/EditProfil"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Edit Profil"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:layout_marginBottom="-8dp"
                    android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/arrowright"
                    android:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/GantiPassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Ganti Password"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/arrowright"
                    android:backgroundTint="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bantuan"
                    android:textColor="@color/black"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:background="@color/gray"
                    android:paddingLeft="20dp"
                    android:textSize="24sp"
                    android:maxLines="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pusatbantuan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Pusat Bantuan"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="-8dp"
                    android:textColor="@color/black"
                    android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/arrowright"
                    android:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/informasi"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Informasi"
                    android:textSize="22sp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textAlignment="viewStart"
                    android:drawableEnd="@drawable/arrowright"
                    android:backgroundTint="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="30dp"
                    android:id="@+id/logout"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="180dp"
                    android:layout_height="70dp"
                    android:text="Logout"
                    android:textSize="20sp"
                    app:cornerRadius="10dp"
                    android:shadowRadius="3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:backgroundTint="@color/greendark"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>